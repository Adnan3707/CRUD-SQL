  <!--include header-->
    <%- include('include/_header') %>
    <!--include header-->

        <!-- Main Site -->
        <main id="site-main">
            <div class="container">
                <div class="box-nav d-flex justify-between">
                    <a href="/add-user" class="border-shadow">
                        <span class="text-gradient">New User <i class="fas fa-user"></i></span>
                    </a>
                </div>
        
                <!-- form handling -->
                <form action="/" method="POST">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>@Email</th>
                                <th>Gender</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                    <% for(var i =0;i< users.length ; i++ ) {%>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= users[i].Name %></td>
                                <td><%= users[i].Email %></td>
                                <td><%= users[i].Gender %></td>
                                <td><%= users[i].Status %></td>
                                <td>
                                <a href="/update-user>"  class="btn border-shadow update"></a>
                                <span class="text-gradent"><i class="fas fa-pencil-alt"></i></span>
                                 <a href="#" class="btn border-shadow delete"></a>
                                <span class="text-gradent"><i class="fas fa-times"></i></span>
                            </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </form>
            </div>
        </main>
        <!-- /Main Site -->
